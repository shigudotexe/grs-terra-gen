num berries = 1 + randomInt(4);

for (num i = 0; i < berries; i = i + 1) {
    num x = randomInt(4) - 1;
    num z = randomInt(4) - 1;
    
    if (getBlock(x, -1, z) == "minecraft:grass_block" || getBlock(x, -1, z) == "minecraft:coarse_dirt") {
        block(x, 0, z, "minecraft:sweet_berry_bush[age=3]");
    }
}